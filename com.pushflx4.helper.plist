<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.pushflx4.helper</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/pushflx4-helper</string>
    </array>

    <!-- Register the Mach service so the plugin can find us. -->
    <key>MachServices</key>
    <dict>
        <key>com.pushflx4.aggregate.helper</key>
        <true/>
    </dict>

    <!-- Start at login, restart on crash. -->
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>

    <!-- Logging -->
    <key>StandardOutPath</key>
    <string>/tmp/pushflx4-helper.stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/pushflx4-helper.stderr.log</string>
</dict>
</plist>
